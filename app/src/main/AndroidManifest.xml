<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cat.urv.deim.asm.p2.common">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        tools:replace="android:theme, android:icon"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ProfileActivity" />
        <activity android:name="cat.urv.deim.asm.p3.shared.FAQSActivity" />
        <activity android:name="cat.urv.deim.asm.p3.shared.EventsDetailActivity" />
        <activity android:name=".MainActivity" android:configChanges="orientation|screenSize"/>
        <activity android:name=".ErrorScreen" />
        <activity android:name=".LoginScreen" />
        <activity android:name=".HelpScreen3" />
        <activity android:name=".HelpScreen2" />
        <activity android:name=".HelpScreen1" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>