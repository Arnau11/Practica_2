<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <include
        android:id="@+id/include"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_10"
            app:srcCompat="@drawable/profile_photo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim_9"
            android:paddingLeft="@dimen/dim_3"
            android:paddingTop="@dimen/dim_1"
            android:paddingBottom="@dimen/dim_5"
            android:text="@string/user_name"
            android:textColor="@color/colorTextGray"
            android:textSize="@dimen/title_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_8"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:paddingLeft="@dimen/dim_9"
            android:paddingTop="@dimen/dim_3"
            android:text="@string/email_profile" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dim_9"
            android:paddingBottom="@dimen/dim_9"
            android:text="@string/email" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_8"
            android:background="@color/colorGray" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>