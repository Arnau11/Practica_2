<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".HelpScreen2">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/photo_dimensions"
        android:layout_height="@dimen/photo_dimensions"
        android:layout_marginTop="@dimen/dim_6"
        android:layout_marginBottom="@dimen/dim_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/help_3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="355dp"
        android:layout_marginTop="@dimen/text_margin_top"
        android:text="@string/help_screen2"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/title_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="440dp"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_marginStart="@dimen/dim_1"
        android:layout_marginBottom="@dimen/progres_bar_margin_bottom"
        android:max="100"
        android:progress="50"
        android:progressTint="@color/progress_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/skiptutorial2"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/button_margin_end"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:background="@color/background_white"
        android:onClick="skipTutorial"
        android:text="@string/skip_tutorial"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/flechaskiptutorial2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/image_button_margin_start"
        android:layout_marginBottom="@dimen/image_button_margin_bottom"
        android:background="@color/background_white"
        android:onClick="skipTutorial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skiptutorial2"
        app:srcCompat="@drawable/arrow_white" />

</androidx.constraintlayout.widget.ConstraintLayout>