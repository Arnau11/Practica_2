<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".HelpScreen1">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/photo_dimensions"
        android:layout_height="@dimen/photo_dimensions"
        android:layout_marginTop="@dimen/dim_6"
        android:layout_marginBottom="@dimen/dim_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/help_2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="375dp"
        android:layout_marginTop="@dimen/text_margin_top"
        android:text="@string/help_screen1"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/title_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.401"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="220dp"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_marginStart="@dimen/dim_1"
        android:layout_marginBottom="@dimen/progres_bar_margin_bottom"
        android:max="100"
        android:progress="0"
        android:progressTint="#673AB7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/skiptutorial1"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dim_9"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:background="@color/background_white"
        android:onClick="skipTutorial"
        android:text="@string/skip_tutorial"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/flechaskiptutorial1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/image_button_margin_start"
        android:layout_marginBottom="@dimen/image_button_margin_bottom"
        android:background="@color/background_white"
        android:onClick="skipTutorial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skiptutorial1"
        app:srcCompat="@drawable/arrow_white" />

</androidx.constraintlayout.widget.ConstraintLayout>